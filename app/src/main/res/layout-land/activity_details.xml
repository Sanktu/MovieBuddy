<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/poster_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/poster"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/movie_poster"/>

    <TextView
        android:id="@+id/title_details"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:text="@string/interstellar"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/poster_details"
        android:layout_marginLeft="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/release_date_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/release_date"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/poster_details"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/poster_details"/>

    <TextView
        android:id="@+id/overview_details"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="@string/overview"
        app:layout_constraintLeft_toRightOf="@+id/poster_details"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_details"/>


    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/appCompatRatingBar"
        android:layout_width="244dp"
        android:layout_height="47dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3.85"
        android:scaleX=".75"
        android:scaleY=".75"
        android:stepSize=".25"
        android:theme="@style/RatingBar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/overview_details"
        app:layout_constraintLeft_toRightOf="@+id/poster_details"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>